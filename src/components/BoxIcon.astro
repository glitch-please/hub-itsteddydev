---
interface Props {
  name: string;
  class?: string;
  size?: string;
  color?: string;
  variant?: 'regular' | 'solid' | 'logo';
}

const { 
  name, 
  class: className = '', 
  size = '1.5rem', 
  color = 'currentColor',
  variant = 'regular'
} = Astro.props;

const prefix = variant === 'solid' ? 'bxs' : variant === 'logo' ? 'bxl' : 'bx';
const iconClass = `${prefix} ${prefix}-${name}`;
---

<i 
  class={iconClass} 
  style={`font-size: ${size}; color: ${color};`}
  class:list={[className]}
></i> 